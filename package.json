{
    "name": "minecraft-auto-reloader",
    "displayName": "Minecraft Auto Reloader",
    "description": "",
    "license": "MIT",
    "version": "0.0.1",
    "author": {
        "name": "Lapis256"
    },
    "main": "./dist/extension.js",
    "repository": {
        "url": "github.com",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "minecraft-auto-reloader.startServer",
        "workspaceContains:**/manifest.json"
    ],
    "contributes": {
        "configuration": {
            "title": "Minecraft Auto Reloader",
            "properties": {
                "minecraft-auto-reloader.port": {
                    "description": "Websocket server port.",
                    "type": "integer",
                    "default": 8080
                }
            }
        },
        "commands": [
            {
                "command": "minecraft-auto-reloader.startServer",
                "title": "Start Server",
                "category": "Minecraft Auto Reloader"
            },
            {
                "command": "minecraft-auto-reloader.stopServer",
                "title": "Stop Server",
                "category": "Minecraft Auto Reloader"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run esbuild-base --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node16",
        "esbuild": "yarn run esbuild-base --sourcemap",
        "esbuild-watch": "yarn run esbuild-base --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/uuid": "^8.3.4",
        "@types/vscode": "^1.68.0",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "esbuild": "^0.14.44",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.2",
        "vsce": "^2.9.1"
    },
    "dependencies": {
        "jsonc-parser": "^3.0.0",
        "uuid": "^8.3.2",
        "ws": "^8.8.0"
    }
}
